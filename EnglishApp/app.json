{
  "expo": {
    "name": "Chat Tutor Ingles IA - Mammoth",
    "slug": "Ingles",
    "scheme": ["englishapp"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/src/assets/logos/mammoth_logo1.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/src/assets/splash/mammoth_splash.png", 
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Necesitamos acceso al micr√≥fono para grabar audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/src/assets/logos/mammoth_logo1.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.anonymous.EnglishApp"
    },
    "web": {
      "favicon": "./app/src/assets/logos/mammoth_logo1.png"
    },
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "dd12f5eb-1727-4b99-9853-c051c3fc85ab"
      }
    }
  }
}
